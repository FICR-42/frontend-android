<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".tela2activity">

    <TextView
        android:id="@+id/tvDenuncie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Denuncie."
        android:textColor="#2A3A2A"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvfrase1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDenuncie"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Contribua para uma sociedade melhor."
        android:textSize="14sp" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="230dp"
        android:layout_height="180dp"
        android:layout_below="@id/tvfrase1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/calogo" />

    <Button
        android:id="@+id/buttonDenunciar"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_below="@id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/buttonlayout"
        android:onClick="buttonDenunciar"
        android:shadowColor="#E8F5E9"
        android:shadowRadius="25"
        android:text="Denunciar Automóvel" />

    <Button
        android:id="@+id/btnDenun"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_below="@id/buttonDenunciar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttonlayout"
        android:onClick="buttonAcompDenun"
        android:shadowColor="#E8F5E9"
        android:shadowRadius="25"
        android:text="Acompanhar Denúncia" />


    <TextView
        android:id="@+id/tvfrase2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnDenun"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Veículos abandonados são um risco à saúde de todos."
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tvfrase3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvfrase2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:text="Ajudam a proliferar o mosquito da dengue."
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tvfrase4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvfrase3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:text="Atrapalham a circulação de pedestres e automóveis."
        android:textSize="12sp" />


</RelativeLayout>